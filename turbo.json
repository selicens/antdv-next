{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build:token": {
      "dependsOn": ["@antdv-next/cssinjs#build", "build:esm"],
      "inputs": ["src/**", "package.json", "tsconfig.json"],
      "outputs": ["../../docs/src/assets/token.json", "../../docs/src/assets/token-meta.json"]
    },
    "build:esm": {
      "dependsOn": ["^build:esm"],
      "inputs": ["src/**", "package.json", "tsconfig.json", "tsdown.config.ts"],
      "outputs": ["dist/**"]
    },
    "@antdv-next/cssinjs#build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "package.json", "tsconfig.json", "tsdown.config.ts"],
      "outputs": ["dist/**"]
    },
    "build": {
      "dependsOn": ["antdv-next#build:token", "^build"],
      "inputs": ["src/**", "package.json", "tsconfig.json"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "dependsOn": ["antdv-next#build:token", "^build"],
      "cache": false,
      "persistent": true
    }
  }
}
